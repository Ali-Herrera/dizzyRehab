<%- include('partials/logged-in-header') -%>
<div class="bg-light bg-gradient rounded-3 p-4 p-sm-5 mt-5">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2 class="fs-3 fw-bold text-black"><%= post.title %></h2>
      <img class="img-fluid" src="<%= post.image%>" />
      <div class="row justify-content-between">
        <div class="caption-profile">
            <p class="text-black"><strong>Username:</strong> <%= user.userName %></p>
            <p class="text-black"><strong>Description:</strong> <%= post.caption %></p>
            <p class="text-black"><strong>Source:</strong> <%= post.source %></p>
        </div>

        <!-- Like Button Form -->
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-heart"></i> 
        </button>
          
        </form>

        <!-- Bookmark Button Form -->
        <form
          class="col-1"
          action="/post/bookmarkPost/<%= post.id %>?_method=PUT"
          method="POST"
        >
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-bookmark"></i>
        </button>
        </form>

        <h3 class="col-3 fs-3 fw-bold text-black">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary" type="submit">
            <i class="fas fa-trash"></i>
          </button>
        </form>
        <%}%>
      </div>
    </div>
</div>

    
<div class="p-4 d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-center">
  <a class="btn btn-outline-light btn-lg px-4 me-sm-3" href="/profile">Return to Profile</a>
  <a class="btn btn-outline-light btn-lg px-4" href="/feed">Return to Feed</a>
</div>

</div>

<%- include('partials/footer') -%>
